<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="radius" format="dimension" />
    <attr name="color" format="color" />

    <declare-styleable name="RoundedButton">
        <attr name="radius" />
        <attr name="color" />
    </declare-styleable>

    <declare-styleable name="Toolbar">
        <attr name="showBackIcon" format="boolean" />
        <attr name="titleToolbar" format="reference" />
        <attr name="leftIconVisibility" format="boolean" />
        <attr name="rightIconVisibility" format="boolean" />
        <attr name="rightIcon" format="integer" />
        <attr name="leftIcon" format="integer" />
        <attr name="textColor" format="reference" />
        <attr name="font" format="reference" />
    </declare-styleable>

    <declare-styleable name="RoundedLinearLayout">
        <attr name="radius" />
        <attr name="color" />
    </declare-styleable>
</resources>